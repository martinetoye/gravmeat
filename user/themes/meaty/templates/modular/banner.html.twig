{% block banner %}
  <div class="banner">
    <div class="container">

      <div class="row">
        <div class="col-xs-12">
            <div class="banner-inner">

          <div class="banner__title">
            <h1>{{ page.title }}<span class="banner-bold-title">{{ page.header.description }}</span></h1>

          <div class="banner__socialLinks--wrapper">
              <h3>Lets Get Social</h3>
              <ul class="banner__socialLinks--links">
                <li class="banner__socialLinks--link"><a href="https://www.facebook.com/{{ site.owner.facebook }}" class="fa fa-facebook" target="blank"></a></li>
                <li class="banner__socialLinks--link"><a href="https://www.instagram.com/{{ site.owner.instagram }}" class="fa fa-instagram" target="_blank"></a></li>
                <li class="banner__socialLinks--link"><a href="https://www.github.com/{{ site.owner.instagram }}" class="fa fa-github" target="_blank"></a></li>
                <li class="banner__socialLinks--link"><a href="https://linkedin.com/in/{{ site.owner.linkedin }}" class="fa fa-linkedin" target="_blank"></a></li>
              </ul>
          </div>
          </div><!-- End Banner Title -->

                  <div class="scroll-down-button">
                    <p>Scroll Down</p>
                    <div id='scrollDown'>
                      <img src="{{ theme_url }}/images/Scroll Down.png" />
                      </div>
                  </div>

          </div><!-- End Banner Inner -->



        </div><!-- End Column -->
      </div><!-- End Row -->


    </div><!-- End Container -->
  </div><!-- End Banner -->
{% endblock %}
