<div class="coffee">
  <div class="container">
    <div class="row">


      <div class="col-xs-12 col-md-offset-3 col-md-6">

      <div class="coffee__cups">
      {% for cup in page.header.cups %}
        <div class="coffee__cups--cup">
        <div class="col-xs-3 col-md-3">
          <i class="fa fa-{{ cup.icon }}"></i>
          <h3>{{ cup.number }}</h3>
          <p>{{ cup.title }}</p>
        </div>
        </div>
        {% endfor %}
      </div>

    </div><!-- End Column -->


    </div><!-- End Row -->
  </div><!-- End Container -->
</div><!-- End Coffee -->
