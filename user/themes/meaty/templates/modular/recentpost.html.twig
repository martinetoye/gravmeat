<div class="recentpost__wrapper wrapper">
  <div class="container">
  <h2>{{ page.title }}</h2>
    <div class="row">
      <div class="col-md-12">
        <div class="row">
        {% for post in page.find('/blog').children.order('date', 'desc').slice(0, 3) %}
            <div class="col-md-4">
                <a href="{{ post.url }}"><h3>{{ post.title }}</h3></a>
                <p>{{ post.header.author }}</p>
                  <p>{{ post.header.date }}</p>
                <p>{{ post.summary }}</p>
            </div>
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
