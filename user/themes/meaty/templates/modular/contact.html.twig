<div id="{{ page.header.id }}">
  <div class="container">

    <div class="row">
      <div class="col-xs-12">
        <h2>{{ page.header.title }}</h2>
      </div>
    </div><!-- End Row -->

    <div class="row">

      <div class="col-xs-12 col-md-4">
        <div class="contact__item--wrapper">
          <div class="contact__item">
            <h3>Email</h3>
            <p>{{ site.owner.email }}</p>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-md-4">
        <div class="contact__item--wrapper">
          <div class="contact__item">
            <h3>Phone</h3>
            <p>{{ site.owner.phone }}</p>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-md-4">
        <div class="contact__item--wrapper">
          <div class="contact__item">
            <h3>Address</h3>
            <p>{{ site.owner.address }}</p>
          </div>
        </div>
      </div>

    </div>

  </div><!-- End Container -->
</div>
