{% extends 'partials/base.html.twig' %}
{% set collection = page.collection() %}
{% block content %}

<div class="blog">

<div class="blog__heading">
    <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="blog__heading--title">Blog</h1>
      </div><!-- End Column -->
    </div><!-- End Row -->
  </div><!-- End Container -->
</div><!-- Blog heading -->

<div class="container">
    <div class="row">
      <div class="col-md-12">
        {{ page.content }}
      </div><!-- End Column -->
    </div><!-- End Row -->

    <div class="row">
      <div class="col-md-12">
                {% for post in collection %}
                  {% if loop.index0 is even %}
                    {% include 'partials/teaserLeft.html.twig' %}
                  {% else %}
                    {% include 'partials/teaserRight.html.twig' %}
                  {% endif %}
                {% endfor %}
      </div><!-- End Column -->
    </div><!-- End Row -->

    <div class="row">
      <div class="col-md-12">
            {% if config.plugins.pagination.enabled and collection.params.pagination %}
                {% include 'partials/pagination.html.twig' with {'pagination':collection.params.pagination} %}
            {% endif %}
      </div><!-- End Column -->
    </div><!-- End Row -->

  </div><!-- End Container -->
</div><!-- End Blog -->

{% endblock %}
